<div class="container text-center pt-3 pl-3">
  <h2><%= @restaurant.name %></h2>

  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>

  <%= link_to 'Back to the list', restaurants_path, class: "btn btn-primary"  %>
  <%= link_to 'Add a new comment', new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.rating %> | <%= review.content %>
    </li>
  <% end %>
</div>
